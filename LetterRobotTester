//This is a tester for LetterRobot

import kareltherobot.*;

public class LetterRobotTester implements Directions {
	public static void main(String[] args) {
		World.setVisible(true);
		World.setDelay(4);
		World.setSize(20, 20);
		
		LetterRobot arcturus = new LetterRobot("Arcturus", 6, 2, North, infinity);
		
		arcturus.drawString("A");
		arcturus.printRobotInformation();
	}
}
